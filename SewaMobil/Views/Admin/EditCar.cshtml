@model SewaMobil.Models.Car

@{
    ViewBag.Title = "Edit Mobil";
}

<h2>Edit Mobil</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.CarId)

    <fieldset>
        <legend>Informasi Mobil</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Brand)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Brand)
            @Html.ValidationMessageFor(model => model.Brand)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Model)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Model)
            @Html.ValidationMessageFor(model => model.Model)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Year)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Year, new { type = "number", min = "1900", max = "2100" })
            @Html.ValidationMessageFor(model => model.Year)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LicensePlate)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.LicensePlate)
            @Html.ValidationMessageFor(model => model.LicensePlate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Color)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Color)
            @Html.ValidationMessageFor(model => model.Color)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Transmission)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Transmission, 
                new SelectList(new[] { "Manual", "Automatic" }, Model.Transmission), 
                "-- Pilih Transmisi --")
            @Html.ValidationMessageFor(model => model.Transmission)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FuelType)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.FuelType, 
                new SelectList(new[] { "Bensin", "Diesel", "Hybrid", "Electric" }, Model.FuelType), 
                "-- Pilih Jenis BBM --")
            @Html.ValidationMessageFor(model => model.FuelType)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Capacity)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Capacity, new { type = "number", min = "1", max = "20" })
            @Html.ValidationMessageFor(model => model.Capacity)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DailyRate)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.DailyRate, new { type = "number", min = "0", step = "1000" })
            @Html.ValidationMessageFor(model => model.DailyRate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ImageUrl)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.ImageUrl)
            @Html.ValidationMessageFor(model => model.ImageUrl)
            <p class="field-hint">Masukkan URL gambar mobil (opsional)</p>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description, new { rows = 4, cols = 50 })
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <p>
            <input type="submit" value="Update" class="btn btn-primary" />
            @Html.ActionLink("Batal", "Cars", null, new { @class = "btn btn-secondary" })
        </p>
    </fieldset>
}

@section Scripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}

<style>
    fieldset {
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 5px;
        margin-bottom: 20px;
    }
    
    legend {
        padding: 0 10px;
        font-weight: bold;
    }
    
    .editor-label {
        margin-top: 15px;
        font-weight: bold;
    }
    
    .editor-field {
        margin-bottom: 10px;
    }
    
    .editor-field input[type="text"],
    .editor-field input[type="number"],
    .editor-field select,
    .editor-field textarea {
        width: 100%;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }
    
    .field-hint {
        font-size: 0.9em;
        color: #6c757d;
        margin-top: 5px;
    }
    
    .btn {
        display: inline-block;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        margin-right: 10px;
    }
    
    .btn-primary {
        background-color: #007bff;
        color: white;
    }
    
    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }
    
    .field-validation-error {
        color: #dc3545;
        font-size: 0.9em;
    }
</style>