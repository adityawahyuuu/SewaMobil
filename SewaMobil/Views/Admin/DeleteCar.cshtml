@model SewaMobil.Models.Car

@{
    ViewBag.Title = "Hapus Mobil";
}

<h2>Hapus Mobil</h2>

<div class="warning-box">
    <h3>⚠️ Konfirmasi Penghapusan</h3>
    <p>Apakah Anda yakin ingin menghapus mobil berikut?</p>
</div>

<div class="car-details">
    <h3>Detail Mobil</h3>
    
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="@Model.CarName" style="max-width: 300px; height: auto; border-radius: 5px; margin-bottom: 15px;" />
    }
    
    <table class="detail-table">
        <tr>
            <th>ID Mobil:</th>
            <td>@Model.CarId</td>
        </tr>
        <tr>
            <th>Nama Mobil:</th>
            <td><strong>@Model.CarName</strong></td>
        </tr>
        <tr>
            <th>Plat Nomor:</th>
            <td>@Model.LicensePlate</td>
        </tr>
        <tr>
            <th>Warna:</th>
            <td>@Model.Color</td>
        </tr>
        <tr>
            <th>Transmisi:</th>
            <td>@Model.Transmission</td>
        </tr>
        <tr>
            <th>Bahan Bakar:</th>
            <td>@Model.FuelType</td>
        </tr>
        <tr>
            <th>Kapasitas:</th>
            <td>@Model.Capacity orang</td>
        </tr>
        <tr>
            <th>Harga Sewa/Hari:</th>
            <td>Rp @string.Format("{0:N0}", Model.DailyRate)</td>
        </tr>
        <tr>
            <th>Status:</th>
            <td>
                @if (Model.Status == "Tersedia")
                {
                    <span class="badge badge-success">@Model.Status</span>
                }
                else
                {
                    <span class="badge badge-danger">@Model.Status</span>
                }
            </td>
        </tr>
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <tr>
                <th>Deskripsi:</th>
                <td>@Model.Description</td>
            </tr>
        }
    </table>
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    
    <div class="action-buttons">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Apakah Anda YAKIN ingin menghapus mobil ini? Data tidak dapat dikembalikan!');">
            🗑️ Ya, Hapus Mobil
        </button>
        @Html.ActionLink("Batal", "Cars", null, new { @class = "btn btn-secondary" })
    </div>
}

