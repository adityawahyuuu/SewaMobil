@model SewaMobil.Models.Rental

@{
    ViewBag.Title = "Batalkan Penyewaan";
}

<h2>Batalkan Penyewaan</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-error">
        @TempData["ErrorMessage"]
    </div>
}

<div class="warning-box-main">
    <h3>⚠️ Peringatan</h3>
    <p>Anda akan membatalkan penyewaan berikut. Pembatalan tidak dapat dibatalkan setelah dikonfirmasi.</p>
</div>

<div class="rental-summary">
    <h3>Informasi Penyewaan</h3>
    <table class="summary-table">
        <tr>
            <th>ID Rental:</th>
            <td>@Model.RentalId</td>
        </tr>
        <tr>
            <th>Mobil:</th>
            <td>@Model.Car.CarName (@Model.Car.LicensePlate)</td>
        </tr>
        <tr>
            <th>Tanggal Sewa:</th>
            <td>@Model.RentalDate.ToString("dd MMMM yyyy")</td>
        </tr>
        <tr>
            <th>Tanggal Kembali:</th>
            <td>@Model.ReturnDate.ToString("dd MMMM yyyy")</td>
        </tr>
        <tr>
            <th>Total Hari Sewa:</th>
            <td>@Model.TotalDays hari</td>
        </tr>
        <tr>
            <th>Total Harga:</th>
            <td><strong style="color: #dc3545;">Rp @string.Format("{0:N0}", Model.TotalPrice)</strong></td>
        </tr>
    </table>
</div>

@using (Html.BeginForm("CancelConfirmed", "Rental", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("id", Model.RentalId)
    
    <fieldset>
        <legend>Konfirmasi Pembatalan</legend>
        
        <div class="editor-label">
            <label for="notes">Alasan Pembatalan (Opsional)</label>
        </div>
        <div class="editor-field">
            <textarea id="notes" name="notes" rows="4" 
                      placeholder="Masukkan alasan pembatalan..."></textarea>
        </div>
        
        <div class="info-box">
            <p><strong>ℹ️ Informasi:</strong></p>
            <ul>
                <li>Setelah dibatalkan, mobil akan tersedia untuk disewa oleh user lain</li>
                <li>Status penyewaan akan berubah menjadi "Cancelled"</li>
                <li>Tindakan ini tidak dapat dibatalkan</li>
                <li>Kebijakan refund (jika ada) akan diproses sesuai terms & conditions</li>
            </ul>
        </div>
        
        <p>
            <button type="submit" class="btn btn-danger" onclick="return confirm('Apakah Anda yakin ingin membatalkan penyewaan ini?');">
                ✗ Ya, Batalkan Penyewaan
            </button>
            @Html.ActionLink("Kembali", "Details", new { id = Model.RentalId }, new { @class = "btn btn-secondary" })
        </p>
    </fieldset>
}

