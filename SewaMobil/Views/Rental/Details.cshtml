@model SewaMobil.Models.Rental

@{
    ViewBag.Title = "Detail Penyewaan";
    var histories = ViewBag.Histories as IEnumerable<SewaMobil.Models.RentalHistory>;
}

<h2>Detail Penyewaan #@Model.RentalId</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="detail-container">
    <div class="detail-section">
        <h3>Informasi Penyewaan</h3>
        <table class="detail-table">
            <tr>
                <th>ID Rental:</th>
                <td>@Model.RentalId</td>
            </tr>
            <tr>
                <th>Status:</th>
                <td>
                    @if (Model.Status == "Active")
                    {
                        <span class="badge badge-primary">@Model.Status</span>
                    }
                    else if (Model.Status == "Completed")
                    {
                        <span class="badge badge-success">@Model.Status</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">@Model.Status</span>
                    }
                </td>
            </tr>
            <tr>
                <th>Tanggal Dibuat:</th>
                <td>@Model.CreatedAt.ToString("dd MMMM yyyy HH:mm")</td>
            </tr>
        </table>
    </div>

    <div class="detail-section">
        <h3>Informasi Penyewa</h3>
        <table class="detail-table">
            <tr>
                <th>Nama:</th>
                <td>@Model.User.FullName</td>
            </tr>
            <tr>
                <th>Email:</th>
                <td>@Model.User.Email</td>
            </tr>
            <tr>
                <th>Telepon:</th>
                <td>@Model.User.PhoneNumber</td>
            </tr>
        </table>
    </div>

    <div class="detail-section">
        <h3>Informasi Mobil</h3>
        <table class="detail-table">
            <tr>
                <th>Mobil:</th>
                <td>@Model.Car.CarName</td>
            </tr>
            <tr>
                <th>Plat Nomor:</th>
                <td>@Model.Car.LicensePlate</td>
            </tr>
            <tr>
                <th>Warna:</th>
                <td>@Model.Car.Color</td>
            </tr>
            <tr>
                <th>Transmisi:</th>
                <td>@Model.Car.Transmission</td>
            </tr>
            <tr>
                <th>Harga per Hari:</th>
                <td>Rp @string.Format("{0:N0}", Model.Car.DailyRate)</td>
            </tr>
        </table>
    </div>

    <div class="detail-section">
        <h3>Detail Sewa</h3>
        <table class="detail-table">
            <tr>
                <th>Tanggal Sewa:</th>
                <td>@Model.RentalDate.ToString("dd MMMM yyyy")</td>
            </tr>
            <tr>
                <th>Tanggal Kembali:</th>
                <td>@Model.ReturnDate.ToString("dd MMMM yyyy")</td>
            </tr>
            @if (Model.ActualReturnDate.HasValue)
            {
                <tr>
                    <th>Tanggal Dikembalikan:</th>
                    <td>@Model.ActualReturnDate.Value.ToString("dd MMMM yyyy HH:mm")</td>
                </tr>
            }
            <tr>
                <th>Total Hari:</th>
                <td>@Model.TotalDays hari</td>
            </tr>
            <tr>
                <th>Total Harga:</th>
                <td><strong style="color: #007bff; font-size: 1.2em;">Rp @string.Format("{0:N0}", Model.TotalPrice)</strong></td>
            </tr>
            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <tr>
                    <th>Catatan:</th>
                    <td>@Model.Notes</td>
                </tr>
            }
        </table>
    </div>
</div>

@if (histories != null && histories.Any())
{
    <div class="history-section">
        <h3>Riwayat Aktivitas</h3>
        <table class="history-table">
            <thead>
                <tr>
                    <th>Tanggal</th>
                    <th>Aksi</th>
                    <th>Oleh</th>
                    <th>Catatan</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var history in histories)
                {
                    <tr>
                        <td>@history.ActionDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@history.Action</td>
                        <td>@(history.ActionByUser != null ? history.ActionByUser.Username : "-")</td>
                        <td>@history.Notes</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div class="action-buttons">
    @if (Model.Status == "Active" && Session["UserId"] != null && (int)Session["UserId"] == Model.UserId)
    {
        @Html.ActionLink("Kembalikan Mobil", "Return", new { id = Model.RentalId }, new { @class = "btn btn-success" })
        @Html.ActionLink("Batalkan Penyewaan", "Cancel", new { id = Model.RentalId }, new { @class = "btn btn-danger" })
    }
    
    @if (Session["UserRole"] != null && Session["UserRole"].ToString() == "Admin")
    {
        @Html.ActionLink("Kembali ke Daftar", "Rentals", "Admin", null, new { @class = "btn btn-secondary" })
    }
    else
    {
        @Html.ActionLink("Kembali", "MyRentals", "Rental", null, new { @class = "btn btn-secondary" })
    }
</div>

<style>
    .detail-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin: 20px 0;
    }
    
    .detail-section {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        border: 1px solid #ddd;
    }
    
    .detail-section h3 {
        margin-top: 0;
        color: #007bff;
        border-bottom: 2px solid #007bff;
        padding-bottom: 10px;
    }
    
    .detail-table {
        width: 100%;
        margin-top: 15px;
    }
    
    .detail-table th {
        text-align: left;
        padding: 8px;
        font-weight: bold;
        width: 40%;
    }
    
    .detail-table td {
        padding: 8px;
    }
    
    .history-section {
        margin: 30px 0;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        border: 1px solid #ddd;
    }
    
    .history-section h3 {
        margin-top: 0;
        color: #007bff;
    }
    
    .history-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
    }
    
    .history-table th,
    .history-table td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
    }
    
    .history-table th {
        background-color: #007bff;
        color: white;
    }
    
    .history-table tbody tr:nth-child(even) {
        background-color: #f8f9fa;
    }
    
    .action-buttons {
        margin-top: 30px;
    }
    
    .btn {
        display: inline-block;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        margin-right: 10px;
        margin-bottom: 10px;
    }
    
    .btn-success {
        background-color: #28a745;
        color: white;
    }
    
    .btn-danger {
        background-color: #dc3545;
        color: white;
    }
    
    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }
    
    .badge {
        display: inline-block;
        padding: 5px 10px;
        border-radius: 3px;
        font-weight: bold;
    }
    
    .badge-primary {
        background-color: #007bff;
        color: white;
    }
    
    .badge-success {
        background-color: #28a745;
        color: white;
    }
    
    .badge-secondary {
        background-color: #6c757d;
        color: white;
    }
    
    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 5px;
    }
    
    .alert-success {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
    }
</style>