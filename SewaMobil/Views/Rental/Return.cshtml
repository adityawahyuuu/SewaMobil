@model SewaMobil.Models.Rental

@{
    ViewBag.Title = "Pengembalian Mobil";
}

<h2>Pengembalian Mobil</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-error">
        @TempData["ErrorMessage"]
    </div>
}

<div class="info-box">
    <p>Anda akan mengembalikan mobil berikut. Pastikan mobil dalam kondisi baik sebelum mengembalikan.</p>
</div>

<div class="rental-summary">
    <h3>Informasi Penyewaan</h3>
    <table class="summary-table">
        <tr>
            <th>ID Rental:</th>
            <td>@Model.RentalId</td>
        </tr>
        <tr>
            <th>Mobil:</th>
            <td>@Model.Car.CarName (@Model.Car.LicensePlate)</td>
        </tr>
        <tr>
            <th>Tanggal Sewa:</th>
            <td>@Model.RentalDate.ToString("dd MMMM yyyy")</td>
        </tr>
        <tr>
            <th>Tanggal Seharusnya Kembali:</th>
            <td>@Model.ReturnDate.ToString("dd MMMM yyyy")</td>
        </tr>
        <tr>
            <th>Total Hari Sewa:</th>
            <td>@Model.TotalDays hari</td>
        </tr>
        <tr>
            <th>Total Harga:</th>
            <td><strong style="color: #007bff;">Rp @string.Format("{0:N0}", Model.TotalPrice)</strong></td>
        </tr>
        @if (Model.ReturnDate < DateTime.Now.Date)
        {
            <tr>
                <th>Status:</th>
                <td><span style="color: #dc3545; font-weight: bold;">⚠️ Terlambat @((DateTime.Now.Date - Model.ReturnDate).Days) hari</span></td>
            </tr>
        }
    </table>
</div>

@using (Html.BeginForm("Return", "Rental", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("id", Model.RentalId)
    
    <fieldset>
        <legend>Konfirmasi Pengembalian</legend>
        
        <div class="editor-label">
            <label for="notes">Catatan Pengembalian (Opsional)</label>
        </div>
        <div class="editor-field">
            <textarea id="notes" name="notes" rows="4" 
                      placeholder="Kondisi mobil, kilo meter, atau catatan lainnya..."></textarea>
        </div>
        
        <div class="warning-box">
            <p><strong>⚠️ Perhatian:</strong></p>
            <ul>
                <li>Pastikan mobil dikembalikan dalam kondisi yang sama seperti saat disewa</li>
                <li>Periksa kelengkapan dokumen dan perlengkapan mobil</li>
                <li>Setelah dikonfirmasi, status penyewaan tidak dapat diubah kembali</li>
                @if (Model.ReturnDate < DateTime.Now.Date)
                {
                    <li style="color: #dc3545; font-weight: bold;">Mobil dikembalikan terlambat, mungkin ada biaya tambahan</li>
                }
            </ul>
        </div>
        
        <p>
            <button type="submit" class="btn btn-success" onclick="return confirm('Apakah Anda yakin ingin mengembalikan mobil ini?');">
                ✓ Konfirmasi Pengembalian
            </button>
            @Html.ActionLink("Batal", "Details", new { id = Model.RentalId }, new { @class = "btn btn-secondary" })
        </p>
    </fieldset>
}

