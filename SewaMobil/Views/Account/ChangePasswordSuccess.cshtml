@{
    ViewBag.Title = "Password Berhasil Diubah";
}

<div class="success-container">
    <div class="success-icon">✓</div>
    <h2>Password Berhasil Diubah!</h2>
    <p>Password Anda telah berhasil diubah. Silakan gunakan password baru untuk login berikutnya.</p>
    
    <div class="action-buttons">
        @Html.ActionLink("Kembali ke Beranda", "Index", "Home", null, new { @class = "btn btn-primary" })
    </div>
</div>

<style>
    .success-container {
        text-align: center;
        padding: 60px 20px;
        max-width: 600px;
        margin: 0 auto;
        background-color: #d4edda;
        border: 2px solid #28a745;
        border-radius: 10px;
    }
    
    .success-icon {
        width: 100px;
        height: 100px;
        line-height: 100px;
        font-size: 60px;
        margin: 0 auto 20px;
        background-color: #28a745;
        color: white;
        border-radius: 50%;
        font-weight: bold;
    }
    
    .success-container h2 {
        color: #155724;
        margin-bottom: 15px;
    }
    
    .success-container p {
        color: #155724;
        font-size: 1.1em;
        margin-bottom: 30px;
    }
    
    .btn {
        display: inline-block;
        padding: 12px 30px;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
        font-size: 1.1em;
    }
    
    .btn-primary {
        background-color: #007bff;
        color: white;
    }
    
    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>